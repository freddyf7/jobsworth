<fieldset>
  <legend><%=_ "Work Times" %></legend>

  <% work = @task.user_work -%>
  <% users = work.keys.sort_by { |u| u.name } -%>
  <% users.each do |user| -%>
    <div class="user">
      <label><%= user.name %></label>
      <%= worked_nice(work[user]/60) %>
    </div>
  <% end -%>

  <div class="user">
    <label>&nbsp;</label>
    <%= add_work_link(@task, "add new...") %>
  </div>

</fieldset>
