      <table width="100%" cellspacing="0">

        <tr>
          <td>
            <label for="meeting_project_id"><%=_ 'Project' %></label>
            <select class="planning_combobox" id="meeting_project_id" name="meeting_project_id" onchange="reload_meeting_project(this.value,1)">
