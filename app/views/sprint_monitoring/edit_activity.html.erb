
  <form class="edit_activity" id="edit_activity_form" action="/sprint_monitoring/update_activity" method="post">
    <table>

      <tr>
        <td>
          <label for="activity_name"><%=_ 'Developer' %></label>
        </td>
        <td>
          <select id="edit_activity_developer" style="font-size:10px;" class="planning_combobox" name="activity_developer">
            <%= options_developers_assign_us(session[:id_prj])%>
          </select>
        </td>
      </tr>

      <tr>
        <td>
          <label for="activity_name"><%=_ 'Name' %></label>
        </td>
        <td>
          <%#= text_field 'story_activity', 'name', :size => 12%>
          <input type="text" id="edit_activity_name" size="12%" name="activity_name"></input>
        </td>
      </tr>

      <tr>
        <td>
          <label for="story_activity_description"><%=_ 'Activity Description' %></label>
        </td>
        <td>
          <%#= text_area 'story_activity', 'description', :rows => 8 %>
          <textarea rows="10" cols="40" id="edit_activity_description" name="activity_description"></textarea>
        </td>
      </tr>

      <tr>
       <td colspan="2">
        <%= submit_tag _("Save"), :class => 'finish' %>
       </td>
      </tr>

    </table>

    <input id="edit_activity_id" type="hidden" name="activity_id"> </input>
    <input id="edit_activity_project_id" type="hidden" name="project_id"> </input>


  </form>
