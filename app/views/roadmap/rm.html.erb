<%
    roadmap_timeline = ::Simile::Timeline::Timeline.new(
      :name => "Roadmap",
      :event_source => {
        :controller => 'roadmap',
        :action => 'recent'
      },
      :event_band => :days,
      :bands => {
        :months => {
          :trackGap => '0.1',
          :showEventText => 'false',
          :width => '"8%"',
          :intervalUnit => 'Timeline.DateTime.MONTH',
          :intervalPixels => '200'
        },
        :days => {
          :trackGap => '0.1',
          :showEventText => 'false',
          :width => '"8%"',
          :intervalUnit => 'Timeline.DateTime.DAY',
          :intervalPixels => '200'
        },
        :hours => {
          :width => '"84%"',
          :intervalUnit => 'Timeline.DateTime.HOUR',
          :intervalPixels => '10'
        }
      },
      :bands_order => [ :months, :days, :hours ],
      :synchronize => {
        :months => :hours,
        :days => :hours
      },
      :highlight => [ :months, :days ]
    )

  %>

    <%= simile_timeline(roadmap_timeline, { :class => 'default_timeline' } ) %>