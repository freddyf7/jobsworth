<% @internal = current_user.customer_id %>
<div id="menu_logo">
	<%# if @internal > 0 %>
          <%#= image_tag("/clients/show_logo/#{@internal}", :alt => "logo" ) %>
	<%# else %>
		<%= image_tag("logo.gif", :alt => "logo" ) %>
	<%# end %>
</div>
<div id="menu_info">&nbsp;<%= render :partial => "layouts/sheet_info" %></div>
<div id="menu_login"><%= render :partial => "layouts/login_info" %></div>
<script type="text/javascript" charset="utf-8">
  jug.subscribe("user-channel-<%= current_user.id %>", function(data){
          jQuery.pnotify({
            pnotify_title: 'Invitacion Planning Poker',
            pnotify_text: 'Partida a jugar: ' + data
          });
        });
</script>