<h1>Listing triggers</h1>

<table>
  <tr>
    <th>Task filter</th>
    <th>Fire on</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>

<% @triggers.each do |trigger| %>
  <tr>
    <td><%=h trigger.task_filter_name %></td>
    <td><%=h trigger.event_name %></td>
    <td><%=h trigger.actions.collect(&:name).join(', ') %></td>
    <td><%= link_to 'Destroy', trigger, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New trigger', new_trigger_path %>
