<tr class="milestone project_<%= project.id %>" style="height:16px;">
  <td style="border-left: 1px solid #BBBBBB;border-bottom: 1px solid #BBBBBB;">
    <div style="padding-top:2px;color:black;font-size:11px;font-weight: bold;"><%=_ 'Overall Progress'%></div>
  </td>
  <td style="border-right: 1px solid #BBBBBB;border-bottom: 1px solid #BBBBBB;">
<%
  open_tasks_count = project.tasks.where("split_status IS NULL and status = 0").count
  total_count = project.tasks.where("split_status IS NULL").count * 1.0
  if total_count >= 1.0
    done_count = total_count - open_tasks_count
    done_percent = (done_count/total_count) * 100.0
%>
  
    <div>
      <div class="prog-border" style="height: 10px;margin-top:2px;position:relative;">
        <div class="prog-bar-medium tooltip " style="width: <%= number_to_percentage( done_percent, :precision => 0)  %>;position:absolute;" title="<%= number_to_percentage( done_percent, :precision => 0) %> (<%= "#{done_count.to_i} / #{total_count.to_i}"%>)  <%= _'Complete'%>"> </div>
        <div class="prog-bar-low tooltip" style="width: <%= number_to_percentage( 100-done_percent, :precision => 0)  %>;position:absolute;left:<%= number_to_percentage( done_percent, :precision => 0)  %>" title="<%= number_to_percentage( 100-done_percent, :precision => 0) %> (<%= "#{total_count.to_i - done_count.to_i} / #{total_count.to_i}"%>) <%=_'Remaining'%>"> </div>
      </div>      
    </div>
  
<% end %>
    </td>
</tr>
