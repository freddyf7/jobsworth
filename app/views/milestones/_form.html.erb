<script type="text/javascript">
  jQuery("#milestone_init_date").datepicker({dateFormat: '<%= current_user.dateFormat %>'});
  jQuery("#milestone_due_at").datepicker({dateFormat: '<%= current_user.dateFormat %>'});
</script>
<%= error_messages_for 'milestone' %>

<label for="milestone_name"><%=_ 'Name' %></label>
<%= text_field 'milestone', 'name'  %>
<br/>
<label for="milestone_init_date"><%=_ 'Begin Date' %></label>
<%= text_field 'milestone', 'init_date', :size => 12, :class=>:datefield, :value=> formatted_date_for_current_user(@milestone.init_date)  %>
<br/>
<label for="milestone_due_at"><%=_ 'Due Date' %></label>
<%= text_field 'milestone', 'due_at', :size => 12, :class=>:datefield, :value=> formatted_date_for_current_user(@milestone.due_date)  %>
<br/>
<label for="milestone_budget"><%=_ 'Budget (' << @project_currency << ')' %></label><%= text_field 'milestone', 'budget', {:size => 12, :readOnly => true, :value => @milestone.get_estimate_cost} %><br/>
<br/>
<label for="milestone_description"><%=_ 'Description' %></label>
<%= text_area 'milestone', 'description', :rows => 10  %>
<br/>

<%= hidden_field_tag "milestone[project_id]", @milestone.project_id %>

