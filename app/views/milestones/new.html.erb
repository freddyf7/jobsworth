<fieldset>
<%= "<legend>#{_ 'New Iteration' }</legend>".html_safe unless @disable_title %>

<% unless @popup.nil? %>
<%= form_tag '/milestones/create' , :remote => true, :name => 'milestoneForm', :id => "add_milestone_form" %>
  <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel'%>
</form>
<% else %>
  <%= form_tag :action => 'create' do %>
   <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel' %>
<% end %>
<% end %>
</fieldset>